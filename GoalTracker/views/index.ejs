<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-container">
        <div class="nav-logo">
          <i class="fas fa-bullseye"></i>
          <span>Goal Tracker</span>
        </div>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/" class="nav-link">
              <i class="fas fa-home"></i>
              Home
            </a>
          </li>
          <li class="nav-item">
            <a href="/add-goal" class="nav-link">
              <i class="fas fa-plus"></i>
              Add Goal
            </a>
          </li>
          <li class="nav-item">
            <a href="/about" class="nav-link">
              <i class="fas fa-info-circle"></i>
              About
            </a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </nav>

    <main class="main-content">
      <div class="hero-section">
        <div class="hero-content">
          <h1 class="hero-title">
            <i class="fas fa-target"></i>
            Achieve Your Goals
          </h1>
          <p class="hero-subtitle">
            Track, manage, and accomplish your dreams with our beautiful goal
            tracking system
          </p>
          <a href="/add-goal" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Add New Goal
          </a>
        </div>
      </div>

      <section class="goals-section">
        <div class="container">
          <div class="section-header">
            <h2><i class="fas fa-list-check"></i> Your Goals</h2>
            <div class="goals-stats">
              <span class="stat">
                <i class="fas fa-bullseye"></i>
                <%= goals.length %> Total
              </span>
              <span class="stat">
                <i class="fas fa-check-circle"></i>
                <%= goals.filter(g => g.completed).length %> Completed
              </span>
            </div>
          </div>

          <div class="goals-grid">
            <% goals.forEach(goal => { %>
            <div
              class="goal-card <%= goal.completed ? 'completed' : '' %> priority-<%= goal.priority %>"
            >
              <div class="goal-header">
                <div class="goal-status">
                  <% if (goal.completed) { %>
                  <i class="fas fa-check-circle completed-icon"></i>
                  <% } else { %>
                  <i class="far fa-circle pending-icon"></i>
                  <% } %>
                </div>
                <div class="goal-priority">
                  <span class="priority-badge priority-<%= goal.priority %>">
                    <%= goal.priority.toUpperCase() %>
                  </span>
                </div>
              </div>

              <div class="goal-content">
                <h3 class="goal-title"><%= goal.title %></h3>
                <p class="goal-description"><%= goal.description %></p>
              </div>

              <div class="goal-actions">
                <button class="btn btn-sm btn-outline">
                  <i class="fas fa-edit"></i>
                  Edit
                </button>
                <button
                  class="btn btn-sm <%= goal.completed ? 'btn-warning' : 'btn-success' %>"
                >
                  <i
                    class="fas <%= goal.completed ? 'fa-undo' : 'fa-check' %>"
                  ></i>
                  <%= goal.completed ? 'Undo' : 'Complete' %>
                </button>
              </div>
            </div>
            <% }) %>
          </div>

          <% if (goals.length === 0) { %>
          <div class="empty-state">
            <i class="fas fa-clipboard-list"></i>
            <h3>No goals yet!</h3>
            <p>
              Start by adding your first goal to begin tracking your progress.
            </p>
            <a href="/add-goal" class="btn btn-primary">
              <i class="fas fa-plus"></i>
              Add Your First Goal
            </a>
          </div>
          <% } %>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 Goal Tracker. Built with Express.js</p>
      </div>
    </footer>

    <script src="/js/script.js"></script>
  </body>
</html>
